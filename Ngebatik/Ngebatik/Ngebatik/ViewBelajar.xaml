                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0">
                                                    <TextBlock x:Name="BindingNamaBatik" Text="{Binding NamaBatik}" TextWrapping="Wrap"></TextBlock>
                                                </Grid>
                                                <Grid Grid.Row="1">
                                                        <TextBlock x:Name="BindingFilosofi" Text="{Binding Filosofi}" TextWrapping="Wrap"></TextBlock>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
